# Binance Testnet API credentials
# Get these from https://testnet.binance.vision/
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_API_SECRET=your_testnet_api_secret_here

# Application settings
ABIDANCE_APP_NAME=Abidance Trading Bot
ABIDANCE_APP_VERSION=0.2.0
ABIDANCE_LOG_LEVEL=INFO
ABIDANCE_DATA_DIR=./data
ABIDANCE_CONFIG_DIR=./config

# Trading settings
ABIDANCE_TRADING_DEFAULT_EXCHANGE=binance
ABIDANCE_TRADING_SYMBOLS=["BTC/USDT", "ETH/USDT"]
ABIDANCE_TRADING_DEFAULT_TIMEFRAME=1h
ABIDANCE_TRADING_RISK_PERCENTAGE=1.5
ABIDANCE_TRADING_MAX_OPEN_TRADES=3
ABIDANCE_TRADING_USE_TESTNET=true

# Strategy settings
ABIDANCE_STRATEGY_DEFAULT=sma_crossover
ABIDANCE_STRATEGY_SMA_FAST_PERIOD=10
ABIDANCE_STRATEGY_SMA_SLOW_PERIOD=30
ABIDANCE_STRATEGY_RSI_PERIOD=14
ABIDANCE_STRATEGY_RSI_OVERBOUGHT=70
ABIDANCE_STRATEGY_RSI_OVERSOLD=30

# Risk management settings
ABIDANCE_RISK_STOP_LOSS_PERCENTAGE=5.0
ABIDANCE_RISK_TAKE_PROFIT_PERCENTAGE=10.0
ABIDANCE_RISK_MAX_DRAWDOWN_PERCENTAGE=25.0
ABIDANCE_RISK_POSITION_SIZING_METHOD=fixed_risk

# Web interface settings
ABIDANCE_WEB_ENABLED=true
ABIDANCE_WEB_HOST=127.0.0.1
ABIDANCE_WEB_PORT=8501
ABIDANCE_WEB_DEBUG=false

# Notification settings
ABIDANCE_NOTIFICATIONS_ENABLED=false
ABIDANCE_NOTIFICATIONS_EMAIL=your_email@example.com
ABIDANCE_NOTIFICATIONS_TELEGRAM_TOKEN=your_telegram_bot_token
ABIDANCE_NOTIFICATIONS_TELEGRAM_CHAT_ID=your_telegram_chat_id

# Database settings
ABIDANCE_DB_TYPE=sqlite
ABIDANCE_DB_PATH=./data/abidance.db

# Advanced settings
ABIDANCE_BACKTEST_START_DATE=2023-01-01
ABIDANCE_BACKTEST_END_DATE=2023-12-31
ABIDANCE_USE_CACHED_DATA=true
ABIDANCE_CACHE_EXPIRY_HOURS=24
ABIDANCE_CONCURRENT_DOWNLOADS=3
ABIDANCE_RETRY_ATTEMPTS=3
ABIDANCE_RETRY_DELAY_SECONDS=5 